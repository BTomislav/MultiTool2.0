<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="600">
       <KeyFrameSet>
           <KeyPosition
               motion:motionTarget="@+id/spinner"
               motion:framePosition="50"
               motion:keyPositionType="pathRelative"
               motion:percentY="0.35" />
           <KeyPosition
               motion:motionTarget="@+id/spinner2"
               motion:framePosition="50"
               motion:keyPositionType="pathRelative"
               motion:percentY="0.3" />
           <KeyPosition
               motion:motionTarget="@+id/spinner"
               motion:framePosition="20"
               motion:keyPositionType="pathRelative"
               motion:percentY="0.25" />
           <KeyPosition
               motion:motionTarget="@+id/spinner"
               motion:framePosition="80"
               motion:keyPositionType="pathRelative"
               motion:percentY="0.25" />
           <KeyPosition
               motion:motionTarget="@+id/spinner2"
               motion:framePosition="20"
               motion:keyPositionType="pathRelative"
               motion:percentY="0.2" />
           <KeyPosition
               motion:motionTarget="@+id/spinner2"
               motion:framePosition="80"
               motion:keyPositionType="pathRelative"
               motion:percentY="0.2" />
           <KeyAttribute
               motion:motionTarget="@+id/button3"
               motion:framePosition="100"
               android:rotationY="180" />
       </KeyFrameSet>
        <OnClick motion:targetId="@+id/button3" />
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="90dp"
            android:id="@+id/spinner2"
            motion:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginLeft="-10dp"
            android:layout_marginStart="-10dp" />
        <Constraint
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="90dp"
            android:id="@+id/spinner"
            motion:layout_constraintEnd_toStartOf="@+id/button3"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp" />
        <Constraint
            android:id="@+id/button3"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp">
            <CustomAttribute
                motion:attributeName="text" />
        </Constraint>


    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="90dp"
            android:id="@+id/spinner"
            motion:layout_constraintStart_toEndOf="@+id/button3"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" />
        <Constraint
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="90dp"
            android:id="@+id/spinner2"
            motion:layout_constraintEnd_toStartOf="@+id/button3"
            android:layout_marginRight="0dp"
            android:layout_marginEnd="0dp" />
        <Constraint
            android:id="@+id/button3"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            motion:layout_constraintHorizontal_bias="0.498"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="0dp"/>
    </ConstraintSet>
</MotionScene>